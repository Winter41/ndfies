= form_for([@album, @album.tracks.new]) do |f|
  .form-group
    = f.label :name, "Track"
    = f.text_field :name
  .form-group
    = f.label :file, "Mp3"
    = f.file_field :file
    = f.hidden_field :file_cache

    #progress
      .bar{ style: "width: 0%;"}

  = f.submit class: 'btn btn-primary'

:javascript
  $(function(){ Ndfies.Jquery_upload.init();})
